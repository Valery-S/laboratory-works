@model IEnumerable<MySite.Models.Picture>
<!DOCTYPE html>
<html>
<head>
	<title>Удалить картинку</title>
	<meta charset="utf-8">
	<link rel="stylesheet" href="~/css/delete.css">
</head>
<body>
	<p align="center" style="color: coral; font-size: 50px; cursor: default ">
		<i><font face="Arial">Удалить картинку </font></i>
	</p>
	<ul class="menu">
		<li><a href="~/Home/Index" style="cursor:pointer">На главную</a></li>
		@if (Model.Count() != 0)
		{
			<li class="to_like"><a href="~/Home/Like_or_dislike/@Model.FirstOrDefault().Id" style="cursor:pointer">Оценить картинки</a></li>
		}
		<li><a href="~/Home/ADD" style="cursor:pointer">Добавить картинку</a></li>
	</ul>

	<div class="form">
		<p align="center" style="color: coral; font-size: 20px;" class="title" method="post">
			<i>
				<font face="Arial">Вы уверены в том, что хотите удалить эту картинку?<Br>
				</font>
			</i>
		</p>
		@foreach (var picture in Model)
		{
			if(@picture.Id== @ViewBag.PictireID)
				{
				<img src="~/Image/50 Foto/@picture.Name" width="520" height="305" class="del_img" />
				}
		}
		<form method="post">
			<button type="submit" value="delete" class="delete" style="cursor:pointer">Удалить</button>
		</form>

	</div>





</body>

</html>